{
  "root":true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parseOptions": {
    "ecmaVersion":7,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "browser":true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": 1
  }
}
